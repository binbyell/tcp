<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent" />-->
    <Button
        android:id="@+id/button_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkV"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/back_ground_map"
        app:layout_constraintBottom_toTopOf="@id/warn_layout"
        app:layout_constraintLeft_toRightOf="@+id/clicked_node"
        app:layout_constraintRight_toLeftOf="@id/button_alarm"/>
    <Button
        android:id="@+id/button_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkA"
        app:layout_constraintTop_toBottomOf="@id/back_ground_map"
        app:layout_constraintBottom_toTopOf="@id/warn_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button_value"/>
</androidx.constraintlayout.widget.ConstraintLayout>