<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <ImageView
        android:id="@+id/back_ground_map"
        android:layout_width="match_parent"
        android:layout_height="293dp"
        android:src="@drawable/background_map"
        android:scaleType="fitCenter"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/move_to_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_format_list_bulleted_24"
        android:background="@color/null_color"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!--N1-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_node_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="91dp"
        android:layout_marginRight="45dp"
        app:layout_constraintTop_toTopOf="@+id/back_ground_map"
        app:layout_constraintRight_toRightOf="@+id/back_ground_map">
        <ImageView
            android:id="@+id/btn_node_image_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item_node"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/warn_node_1"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_warn_lv2"
        app:layout_constraintBottom_toBottomOf="@id/btn_node_1"
        app:layout_constraintLeft_toLeftOf="@+id/btn_node_1"/>

    <!--N2-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_node_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="59dp"
        app:layout_constraintTop_toTopOf="@+id/back_ground_map"
        app:layout_constraintLeft_toLeftOf="@+id/back_ground_map">
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/btn_node_image_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item_node"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/warn_node_2"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_warn_lv2"
        app:layout_constraintBottom_toBottomOf="@id/btn_node_2"
        app:layout_constraintLeft_toLeftOf="@+id/btn_node_2"/>

    <!--N3-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_node_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="47dp"
        android:layout_marginRight="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/back_ground_map"
        app:layout_constraintRight_toRightOf="@+id/back_ground_map">
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/btn_node_image_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item_node"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/warn_node_3"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_warn_lv2"
        app:layout_constraintBottom_toBottomOf="@id/btn_node_3"
        app:layout_constraintLeft_toLeftOf="@+id/btn_node_3"/>

    <TextView
        android:id="@+id/tcp_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:textSize="18sp"
        android:textColor="@color/warn_item_nodeText"
        app:layout_constraintTop_toTopOf="@+id/button_value"
        app:layout_constraintBottom_toBottomOf="@+id/button_value"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="C1"/>
    <TextView
        android:id="@+id/clicked_node"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="131dp"
        android:textSize="18sp"
        android:textColor="@color/warn_item_nodeText"
        app:layout_constraintTop_toTopOf="@+id/button_value"
        app:layout_constraintBottom_toBottomOf="@+id/button_value"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="N1"/>

    <TextView
        android:id="@+id/textview_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/not_linked"/>

    <LinearLayout
        android:id="@+id/warn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/back_ground_map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.hg.esp_tcp.item.ItemNotice
            android:id="@+id/notice_item_N1"
            android:visibility="invisible"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.hg.esp_tcp.item.ItemNotice
            android:id="@+id/notice_item_N2"
            android:visibility="invisible"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.hg.esp_tcp.item.ItemNotice
            android:id="@+id/notice_item_N3"
            android:visibility="invisible"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

<!--        <com.hg.esp_tcp.ItemWarn-->
<!--            android:id="@+id/warn_item_N1"-->
